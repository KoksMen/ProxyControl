<UserControl
    x:Class="ProxyControl.Views.UpdateToast"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="320"
    Height="100"
    Background="Transparent"
    BorderThickness="0"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ToastBtn" TargetType="Button">
            <Setter Property="Background" Value="#6366F1" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="12,6" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4F46E5" />
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DismissBtn" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Foreground" Value="#71717A" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontSize="14"
                                Text="âœ•" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="White" />
                    <Setter Property="Background" Value="#27272A" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border
        Padding="16"
        Background="#1F1F23"
        BorderBrush="#3F3F46"
        BorderThickness="1"
        CornerRadius="12">
        <Border.Effect>
            <DropShadowEffect
                BlurRadius="15"
                Opacity="0.4"
                ShadowDepth="2" />
        </Border.Effect>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Icon  -->
            <Border
                Width="40"
                Height="40"
                VerticalAlignment="Center"
                Background="#2E1065"
                CornerRadius="20">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="20"
                    Text="ðŸš€" />
            </Border>

            <!--  Text Content  -->
            <StackPanel
                Grid.Column="1"
                Margin="12,0,0,0"
                VerticalAlignment="Center">
                <TextBlock
                    FontSize="14"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Update Available" />
                <TextBlock
                    Margin="0,2,0,0"
                    FontSize="12"
                    Foreground="#A1A1AA"
                    Text="{Binding LatestVersion, StringFormat='Version {0} is ready'}" />
            </StackPanel>

            <!--  Actions  -->
            <StackPanel
                Grid.Column="2"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <Button
                    Margin="0,0,8,0"
                    Command="{Binding OpenUpdateModalCommand}"
                    Content="Update"
                    Style="{StaticResource ToastBtn}" />
                <Button
                    Width="24"
                    Height="24"
                    Click="OnDismissClick"
                    Style="{StaticResource DismissBtn}" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
