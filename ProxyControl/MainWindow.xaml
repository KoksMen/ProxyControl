                                                                        Margin="10,0,0,0"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="11"
                                                                        Foreground="#71717A"
                                                                        Text="{Binding Time}" />
                                                                    <TextBlock
                                                                        Margin="10,0,0,0"
                                                                        VerticalAlignment="Center"
                                                                        FontSize="12"
                                                                        FontWeight="SemiBold"
                                                                        Foreground="#A1A1AA"
                                                                        Text="{Binding ProcessName}" />
