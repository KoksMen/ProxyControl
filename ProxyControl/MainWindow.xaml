                                                <DataTemplate>
                                                    <Border
                                                        Margin="0,0,0,6"
                                                        Padding="14"
                                                        Background="#27272A"
                                                        CornerRadius="8">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="Auto" />
                                                            </Grid.ColumnDefinitions>

