                                    <StackPanel
                                        Grid.Row="0"
                                        Margin="0,0,0,16"
                                        Orientation="Horizontal">
                                        <TextBlock
                                            FontSize="16"
                                            FontWeight="SemiBold"
                                            Foreground="#E4E4E7"
                                            Text="📋 Connection History" />
                                        <TextBlock
                                            Margin="12,0,0,0"
                                            VerticalAlignment="Center"
                                            FontSize="12"
                                            Foreground="#71717A"
                                            Text="{Binding Logs.Count, StringFormat='{}{0} entries'}" />
