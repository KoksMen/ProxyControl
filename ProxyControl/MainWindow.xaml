<Window x:Class="ProxyControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProxyControl"
        xmlns:vm="clr-namespace:ProxyControl.ViewModels"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        mc:Ignorable="d"
        Title="Proxy Control" Height="750" Width="1100"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <local:BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InvBoolToVis"/>
        <local:InverseBooleanConverter x:Key="InvBool"/>
        <local:StatusColorConverter x:Key="StatusColor"/>
        <local:ListToStringConverter x:Key="ListToStr"/>
        <local:NullToBooleanConverter x:Key="NullToBool"/>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#555"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="AccentBtn" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#007ACC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0097FB"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Background="#252526" Foreground="White" Padding="5">
            <MenuItem Header="File">
                <MenuItem Header="Import Config..." Command="{Binding ImportConfigCommand}"/>
                <MenuItem Header="Export Config..." Command="{Binding ExportConfigCommand}"/>
                <Separator Background="#555"/>
                <MenuItem Header="Exit" Command="{Binding ExitAppCommand}"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Check for Updates..." Command="{Binding CheckUpdateCommand}"/>
                <MenuItem Header="{Binding AppVersion}" IsEnabled="False"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <tb:TaskbarIcon IconSource="proxy.ico" ToolTipText="Proxy Router Pro" DoubleClickCommand="{Binding ShowWindowCommand}">
                <tb:TaskbarIcon.ContextMenu>
                    <ContextMenu Background="#2D2D30" Foreground="White">
                        <MenuItem Header="Open Settings" Command="{Binding ShowWindowCommand}"/>
                        <Separator Background="#555"/>
                        <MenuItem Header="{Binding ToggleProxyMenuText}" Command="{Binding ToggleProxyCommand}" FontWeight="Bold"/>
                        <Separator Background="#555"/>
                        <MenuItem Header="Exit" Command="{Binding ExitAppCommand}" Foreground="#FF6666"/>
                    </ContextMenu>
                </tb:TaskbarIcon.ContextMenu>
            </tb:TaskbarIcon>

            <Border Grid.Column="0" Background="#252526" BorderBrush="#3E3E42" BorderThickness="0,0,1,0">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="PROXY LIST" FontWeight="Bold" Foreground="#999" Margin="0,0,0,10"/>
                    <ListBox Grid.Row="1" ItemsSource="{Binding Proxies}" SelectedItem="{Binding SelectedProxy}" 
                             Background="Transparent" BorderThickness="0" Foreground="White">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox IsChecked="{Binding IsEnabled}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding IpAddress, TargetNullValue='(No IP)'}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Port, StringFormat=Port: {0}}" FontSize="10" Foreground="#AAA"/>
                                    </StackPanel>
                                    <Border Grid.Column="2" Background="#333" CornerRadius="3" Padding="4,1">
                                        <TextBlock Text="{Binding Status}" FontSize="9" Foreground="{Binding Status, Converter={StaticResource StatusColor}}"/>
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <StackPanel Grid.Row="2" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button Content="+ Manual Add" Command="{Binding AddProxyCommand}" Style="{StaticResource AccentBtn}"/>
                            <Button Grid.Column="1" Content="Paste" Command="{Binding PasteProxyCommand}" ToolTip="Format: ip:port"/>
                        </Grid>
                        <Button Content="Remove Selected" Command="{Binding RemoveProxyCommand}" Background="#A03333" Margin="2,5,2,2"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="ROUTER SETTINGS" FontSize="18" FontWeight="Light"/>
                        <CheckBox Content="Autostart with Windows" IsChecked="{Binding IsAutoStart}" Margin="0,5,0,0" Foreground="#AAA"/>
                    </StackPanel>
                    <Button Grid.Column="1" Command="{Binding ToggleProxyCommand}" Width="200" Height="40" FontWeight="Bold" FontSize="14">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsProxyRunning}" Value="True">
                                        <Setter Property="Content" Value="SYSTEM PROXY: ON"/>
                                        <Setter Property="Background" Value="#28A745"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding IsProxyRunning}" Value="False">
                                        <Setter Property="Content" Value="SYSTEM PROXY: OFF"/>
                                        <Setter Property="Background" Value="#A03333"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Border Grid.Row="1" Background="#252526" CornerRadius="5" Padding="15" Margin="0,0,0,20">
                    <StackPanel IsEnabled="{Binding SelectedProxy, Converter={StaticResource NullToBool}}">
                        <TextBlock Text="SELECTED PROXY DETAILS" FontWeight="Bold" Foreground="#007ACC" Margin="0,0,0,10"/>
                        <Grid DataContext="{Binding SelectedProxy}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="5">
                                <TextBlock Text="IP Address" Foreground="#777" FontSize="10"/>
                                <TextBox Text="{Binding IpAddress, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="5">
                                <TextBlock Text="Port" Foreground="#777" FontSize="10"/>
                                <TextBox Text="{Binding Port, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" Margin="5">
                                <TextBlock Text="User" Foreground="#777" FontSize="10"/>
                                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Margin="5">
                                <TextBlock Text="Pass" Foreground="#777" FontSize="10"/>
                                <TextBox Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"/>
                            </StackPanel>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Changes are saved automatically" Foreground="#555" FontStyle="Italic" VerticalAlignment="Center"/>
                            <Button Grid.Column="1" Content="Check Connection" Command="{Binding CheckProxyCommand}" Style="{StaticResource AccentBtn}" Width="150"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <GroupBox Grid.Row="2" Header="TRAFFIC RULES" Foreground="#007ACC" BorderBrush="#3E3E42">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton Content="BlackList (Exceptions)" IsChecked="{Binding IsBlackListMode}" Foreground="White" Margin="0,0,15,0"/>
                                <RadioButton Content="WhiteList (Specific Route)" IsChecked="{Binding IsBlackListMode, Converter={StaticResource InvBool}}" Foreground="White"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" Visibility="{Binding IsBlackListMode, Converter={StaticResource BoolToVis}}">
                                <TextBlock Text="Default Gateway Proxy:" Foreground="#999" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                <ComboBox ItemsSource="{Binding Proxies}" SelectedItem="{Binding SelectedBlackListMainProxy}" DisplayMemberPath="IpAddress" Width="200" Height="25"/>
                            </StackPanel>
                        </StackPanel>

                        <DataGrid Grid.Row="1" ItemsSource="{Binding RulesList}" SelectedItem="{Binding SelectedRule}"
                                  AutoGenerateColumns="False" CanUserAddRows="False"
                                  Background="#2D2D30" RowBackground="#2D2D30" Foreground="White" BorderThickness="0"
                                  GridLinesVisibility="Horizontal" HorizontalGridLinesBrush="#444" HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="Active" Binding="{Binding IsEnabled, UpdateSourceTrigger=PropertyChanged}" Width="50"/>
                                <DataGridTextColumn Header="Apps" Binding="{Binding TargetApps, Converter={StaticResource ListToStr}}" Width="*"/>
                                <DataGridTextColumn Header="Hosts" Binding="{Binding TargetHosts, Converter={StaticResource ListToStr}}" Width="*"/>
                                <DataGridTemplateColumn Header="Route Via Proxy" Width="140">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <ComboBox ItemsSource="{Binding DataContext.Proxies, RelativeSource={RelativeSource AncestorType=Window}}"
                                                      DisplayMemberPath="IpAddress"
                                                      SelectedValue="{Binding ProxyId, UpdateSourceTrigger=PropertyChanged}"
                                                      SelectedValuePath="Id"
                                                      Background="#333" Foreground="Black" BorderThickness="0"/>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                            </DataGrid.Columns>
                        </DataGrid>

                        <Grid Grid.Row="2" Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Margin="0,0,5,0">
                                <TextBlock Text="Apps (e.g. chrome.exe)" FontSize="10" Foreground="#777"/>
                                <TextBox Text="{Binding NewRuleApps}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Margin="0,0,5,0">
                                <TextBlock Text="Hosts (e.g. youtube.com)" FontSize="10" Foreground="#777"/>
                                <TextBox Text="{Binding NewRuleHosts}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" VerticalAlignment="Bottom" Margin="0,0,5,0" 
                                        Visibility="{Binding IsBlackListMode, Converter={StaticResource InvBoolToVis}}">
                                <TextBlock Text="Initial Proxy" FontSize="10" Foreground="#777"/>
                                <ComboBox ItemsSource="{Binding Proxies}" SelectedItem="{Binding NewRuleSelectedProxy}" DisplayMemberPath="IpAddress" Width="120" Height="26"/>
                            </StackPanel>
                            <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Bottom">
                                <Button Content="Add Rule" Command="{Binding AddRuleCommand}" Style="{StaticResource AccentBtn}"/>
                                <Button Content="Del" Command="{Binding RemoveRuleCommand}" Background="#A03333"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>
        </Grid>
    </Grid>
</Window>
