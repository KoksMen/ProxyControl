                                            Margin="0,0,12,0"
                                            VerticalAlignment="Center"
                                            FontSize="18"
                                            Text="🔄" />
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock
                                                FontSize="14"
                                                FontWeight="SemiBold"
                                                Foreground="#E4E4E7"
                                                Text="Updates" />
                                            <TextBlock
                                                FontSize="11"
                                                Foreground="#71717A"
