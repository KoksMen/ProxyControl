                                                                Width="28"
                                                                Height="28"
                                                                Margin="0,0,14,0"
                                                                VerticalAlignment="Center"
                                                                Source="{Binding AppIcon}" />

                                                            <!--  Main Content  -->
                                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                                <StackPanel Orientation="Horizontal">
                                                                    <!--  Type Badge  -->
                                                                    <Border
                                                                        Padding="6,2"
                                                                        Background="#3F3F46"
                                                                        CornerRadius="4">
